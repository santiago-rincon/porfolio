---
const navItems = [
  {
    title: "Experiencia",
    url: "/experience",
  },
  {
    title: "Proyectos",
    url: "/proyects",
  },
  {
    title: "Sobre m√≠",
    url: "/about-me",
  },
  {
    title: "Contacto",
    url: "/contact",
  },
  {
    title: "Estudios",
    url: "/education",
  },
];
---

<header
  class={`
    flex justify-center items-center
    mx-auto
    py-5
    sticky top-0
    w-full xl:w-[1120px]
    z-10
  `}
>
  <nav
    class={`
      border border-black rounded-full
      px-3 py-1
      flex flex-row items-center
      bg-neutral-200 dark:bg-black/50
      backdrop-blur-2xl
    `}
  >
    {
      navItems.map((link) => (
        <a
          class="text-black dark:text-white rounded-full px-2 sm:px-3 text-sm sm:text-base"
          href={link.url}
        >
          {link.title}
        </a>
      ))
    }
    <label class="ui-switch">
      <input type="checkbox" id="toggle" />
      <div class="slider">
        <div class="circle"></div>
      </div>
    </label>
  </nav>
</header>

<style>
  .ui-switch {
    /* switch */
    --switch-bg: rgb(40, 40, 46);
    --switch-width: 48px;
    --switch-height: 20px;
    /* circle */
    --circle-diameter: 27px;
    --circle-inset: calc((var(--circle-diameter) - var(--switch-height)) / 2);
  }

  .ui-switch input {
    display: none;
  }

  .slider {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    width: var(--switch-width);
    height: var(--switch-height);
    background: var(--switch-bg);
    border-radius: 999px;
    position: relative;
    cursor: pointer;
  }

  .slider .circle {
    top: calc(var(--circle-inset) * -1);
    left: 0;
    width: var(--circle-diameter);
    height: var(--circle-diameter);
    position: absolute;
    background: rgb(245, 241, 4);
    border-radius: inherit;
    background-image: url("/public/sun.svg");
    background-repeat: no-repeat;
    background-position: center center;
    -webkit-transition:
      left 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,
      -webkit-transform 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
    -o-transition:
      left 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,
      transform 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
    transition:
      left 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,
      transform 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,
      -webkit-transform 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    box-shadow:
      0px 2px 1px -1px rgba(0, 0, 0, 0.2),
      0px 1px 1px 0px rgba(0, 0, 0, 0.14),
      0px 1px 3px 0px rgba(0, 0, 0, 0.12);
  }

  .slider .circle::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.75);
    border-radius: inherit;
    -webkit-transition: all 500ms;
    -o-transition: all 500ms;
    transition: all 500ms;
    opacity: 0;
  }

  /* actions */

  .ui-switch input:checked + .slider .circle {
    left: calc(100% - var(--circle-diameter));
    background: rgb(0, 56, 146);
    background-image: url("/public/moon.svg");
  }

  .ui-switch input:active + .slider .circle::before {
    -webkit-transition: 0s;
    -o-transition: 0s;
    transition: 0s;
    opacity: 1;
    width: 0;
    height: 0;
  }
</style>

<script>
  const preferDark =
    window.matchMedia &&
    window.matchMedia("(prefers-color-scheme: dark)").matches;
  let button = document.getElementById("toggle");
  if (button instanceof HTMLInputElement) {
    const toggle = button;
    if (preferDark) {
      toggle.checked = true
      document.body.classList.toggle("dark", true);
    } else {
      toggle.checked = false
      document.body.classList.toggle("dark", false);
    }
    toggle.addEventListener("change", () => {
      const check = toggle.checked;
      document.body.classList.toggle("dark", check);
    });
  }
</script>
