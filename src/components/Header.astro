---
import SwitchTheme from "@components/SwitchTheme.astro";
import DropDown from "./DropDown.astro";

const navItems = [
  {
    title: "Experiencia",
    url: "/experience",
  },
  {
    title: "Proyectos",
    url: "/proyects",
  },
  {
    title: "Estudios",
    url: "/education",
  },
];
---

<header
  class="flex justify-center items-center mx-auto py-5 w-full"
>
  <nav
    class="border border-black rounded-full px-6 py-1 flex items-center bg-neutral-200 dark:bg-black/50 backdrop-blur-2xl min-w-80 justify-between"
  >
    <div class="hidden md:block">
      {
        navItems.map((link) => (
          <a
            class="text-black dark:text-white rounded-full px-2 sm:px-3 text-sm sm:text-base"
            href={link.url}
          >
            {link.title}
          </a>
        ))
      }
    </div>
    <DropDown elements={navItems} className="block md:hidden">
      Men√∫
    </DropDown>
    <SwitchTheme />
  </nav>
</header>
